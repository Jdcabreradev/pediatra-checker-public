---
import '../styles/tailwind.css';
import '../styles/global.scss';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" data-w-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body style="display: flex; flex-direction: column; height: 100vh; width: 100vw; margin: 0; padding: 0; overflow: hidden; background-color: #0f172a; color: #f8fafc; font-family: 'Plus Jakarta Sans', sans-serif;">
		
		<header style="width: 100%; height: 60px; background-color: #1e293b; border-bottom: 1px solid #334155; display: flex; align-items: center; justify-content: space-between; padding: 0 20px; box-sizing: border-box; flex-shrink: 0; z-index: 100;">
			<div style="font-weight: 900; font-size: 1.25rem; color: #818cf8; text-transform: uppercase; letter-spacing: -0.05em;">
				SPCS
			</div>
			
			<nav>
				<ul style="display: flex; gap: 20px; list-style: none; margin: 0; padding: 0; font-size: 11px; font-weight: 800; text-transform: uppercase; letter-spacing: 0.1em; color: #94a3b8;">
					<li>
						<a href="/" style="text-decoration: none; color: inherit;" class="nav-link">Chat</a>
					</li>
					<li>
						<a href="/admin" style="text-decoration: none; color: inherit;" class="nav-link">Administrar</a>
					</li>
				</ul>
			</nav>
		</header>

		<main style="flex: 1; position: relative; overflow: hidden; width: 100%; display: flex; flex-direction: column; background-color: #0f172a;">
			<slot />
		</main>

	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800;900&display=swap');
    
    .nav-link:hover {
        color: #818cf8 !important;
    }
</style>
