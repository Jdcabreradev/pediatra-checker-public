---
import '../styles/global.scss';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" data-w-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#F8FAFC] text-slate-900 font-sans min-h-screen flex flex-col selection:bg-blue-100 selection:text-blue-900 relative">
		
        {/* Discreet Admin Link */}
        <a href="/admin" class="fixed top-4 right-4 z-50 text-xs font-bold text-slate-300 hover:text-indigo-600 transition-colors uppercase tracking-widest bg-white/50 backdrop-blur-sm px-3 py-1 rounded-full border border-transparent hover:border-indigo-100">
            Admin
        </a>

		<main class="flex-grow flex flex-col relative w-full overflow-x-hidden">
			<slot />
		</main>

	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800;900&display=swap');

	:root {
		--accent: 37, 99, 235;
	}
	
	body {
		font-family: 'Plus Jakarta Sans', sans-serif;
	}

	html {
		scroll-behavior: smooth;
	}
</style>
