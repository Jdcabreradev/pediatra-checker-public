---
import '../styles/global.scss';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" data-w-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 text-slate-900 font-sans h-screen flex flex-col overflow-hidden">
		
		<header class="bg-white border-b border-slate-200 px-4 py-3 flex items-center justify-between shadow-sm z-50">
			<div class="font-black text-xl tracking-tighter text-indigo-600 uppercase">
				SPCS
			</div>
			
			<nav>
				<ul class="flex gap-4 md:gap-8 text-[10px] md:text-xs font-bold uppercase tracking-widest text-slate-500">
					<li>
						<a href="/" class="hover:text-indigo-600 transition-colors py-1 border-b-2 border-transparent hover:border-indigo-600">
							Chat
						</a>
					</li>
					<li>
						<a href="/admin" class="hover:text-indigo-600 transition-colors py-1 border-b-2 border-transparent hover:border-indigo-600">
							Administrar
						</a>
					</li>
				</ul>
			</nav>
		</header>

		<main class="flex-grow relative overflow-hidden flex flex-col">
			<slot />
		</main>

	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800;900&display=swap');

	body {
		font-family: 'Plus Jakarta Sans', sans-serif;
	}

	html, body {
		height: 100%;
		margin: 0;
	}
</style>
